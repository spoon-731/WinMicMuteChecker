<UserControl x:Class="WinMicMuteChecker.QuickPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Width="360"
			 Height="318"
			 Background="#252525"
			 Cursor="Hand">

    <UserControl.Resources>
        <!-- Quadrato posizione -->
		<Style x:Key="PosCell" TargetType="Button">
			<Setter Property="Width" Value="24"/>
			<Setter Property="Height" Value="24"/>
			<Setter Property="Margin" Value="8"/>
			<Setter Property="Background" Value="#505050"/>
			<Setter Property="BorderBrush" Value="#505050"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Cursor" Value=""/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border CornerRadius="3"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"></Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Swatch colore -->
        <Style x:Key="ColorSwatch" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 0 0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#252525"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Track button piatto -->
        <Style x:Key="SliderTrackButton" TargetType="RepeatButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Height="6" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Thumb rotondo viola -->
        <Style x:Key="PurpleThumb" TargetType="Thumb">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                CornerRadius="999"
                                Margin="0 0 0 0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider piatto viola/bianco -->
        <Style x:Key="FlatSlider" TargetType="Slider">
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="18">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Track x:Name="PART_Track" Focusable="False">
                                <!-- Parte sinistra (valore raggiunto) -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderTrackButton}" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                </Track.DecreaseRepeatButton>

                                <!-- Parte destra (rimanente) -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderTrackButton}" Background="White" />
                                </Track.IncreaseRepeatButton>

                                <!-- Thumb -->
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource PurpleThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

	<Grid Cursor="">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!--Title-->
		<TextBlock Text="WinMicMuteChecker" Foreground="#FFFFFF" Background="#181818" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center" Padding="8" Width="445" FontSize="16"/>
		<!--End Title-->

		<!-- Position -->
		<Border Grid.Row="1" Background="#404040" CornerRadius="5" Padding="5" Margin="30 20 30 10" Height="150">
            <Grid x:Name="PositionGrid">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!-- 3x3 posizioni -->
				<Button Style="{StaticResource PosCell}" Tag="TopLeft"     Click="OnPositionClick" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"    VerticalAlignment="Top"/>
				<Button Style="{StaticResource PosCell}" Tag="Top"         Click="OnPositionClick" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
				<Button Style="{StaticResource PosCell}" Tag="TopRight"    Click="OnPositionClick" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right"   VerticalAlignment="Top"/>

				<Button Style="{StaticResource PosCell}" Tag="Left"        Click="OnPositionClick" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"    VerticalAlignment="Center"/>
				<Button Style="{StaticResource PosCell}" Tag="Center"      Click="OnPositionClick" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
				<Button Style="{StaticResource PosCell}" Tag="Right"       Click="OnPositionClick" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right"   VerticalAlignment="Center"/>

				<Button Style="{StaticResource PosCell}" Tag="BottomLeft"  Click="OnPositionClick" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left"    VerticalAlignment="Bottom"/>
				<Button Style="{StaticResource PosCell}" Tag="Bottom"      Click="OnPositionClick" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Bottom"/>
				<Button Style="{StaticResource PosCell}" Tag="BottomRight" Click="OnPositionClick" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right"   VerticalAlignment="Bottom"/>
			</Grid>
		</Border>
		<!-- End Position -->

		<!-- Color -->
        <StackPanel Grid.Row="2" Margin="30 10 30 10" Height="34" Cursor="Hand">
            <Grid x:Name="ColorPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource ColorSwatch}" Background="#ffffff" Tag="White" Click="OnColorClick"/>
                <Button Grid.Column="1" Style="{StaticResource ColorSwatch}" Background="#bdc3c8" Tag="Grey" Click="OnColorClick"/>
                <Button Grid.Column="2" Style="{StaticResource ColorSwatch}" Background="#222f3d" Tag="Black" Click="OnColorClick"/>
                <Button Grid.Column="3" Style="{StaticResource ColorSwatch}" Background="#7e40fd" Tag="Purple" Click="OnColorClick"/>
                <Button Grid.Column="4" Style="{StaticResource ColorSwatch}" Background="#2980b9" Tag="Blue" Click="OnColorClick"/>
                <Button Grid.Column="5" Style="{StaticResource ColorSwatch}" Background="#f39c19" Tag="Yellow" Click="OnColorClick"/>
                <Button Grid.Column="6" Style="{StaticResource ColorSwatch}" Background="#2ecc70" Tag="Green" Click="OnColorClick"/>
                <Button Grid.Column="7" Style="{StaticResource ColorSwatch}" Background="#e84b3c" Tag="Red" Click="OnColorClick"/>
            </Grid>
        </StackPanel>
		<!-- End Color -->

		<!-- Opacity -->
        <Grid Grid.Row="3" x:Name="OpacityGrid" Margin="30 10 30 10" Height="19">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="260"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

            <Slider x:Name="OpacitySlider" Minimum="10" Maximum="100" ValueChanged="OnOpacityChanged" Style="{StaticResource FlatSlider}"/>
			<TextBlock Foreground="#ffffff" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:0}%}"/>
		</Grid>
		<!-- End Opacity -->
	</Grid>
</UserControl>